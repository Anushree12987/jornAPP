@code {
    JournalEntry entry = new JournalEntry
    {
        EntryDate = DateTime.Today,
        CreatedAt = DateTime.Now,
        UpdatedAt = DateTime.Now
    };
    List<string> predefinedTags = new()
    {
        "Work", "Career", "Studies", "Family", "Friends", "Relationships",
        "Health", "Fitness", "Personal Growth", "Self-care",
        "Hobbies", "Travel", "Nature", "Finance", "Spirituality",
        "Birthday", "Holiday", "Vacation", "Celebration",
        "Exercise", "Reading", "Writing", "Cooking",
        "Meditation", "Yoga", "Music", "Shopping",
        "Parenting", "Projects", "Planning", "Reflection"
    };

    void ToggleTag(string tag)
    {
        var tags = (entry.Tags ?? "")
            .Split(',', StringSplitOptions.RemoveEmptyEntries)
            .Select(t => t.Trim())
            .ToList();

        if (tags.Contains(tag))
            tags.Remove(tag);   // click again â†’ remove
        else
            tags.Add(tag);      // click â†’ add

        entry.Tags = string.Join(", ", tags);
    }

    bool IsTagSelected(string tag)
    {
        if (string.IsNullOrWhiteSpace(entry.Tags))
            return false;

        return entry.Tags
            .Split(',', StringSplitOptions.RemoveEmptyEntries)
            .Select(t => t.Trim())
            .Contains(tag);
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initQuill", "contentEditor");
        }
    }

    async Task SaveEntry()
    {
        // Get HTML content from Quill editor
        entry.Content = await JS.InvokeAsync<string>("getQuillHtml", "contentEditor");

        // Trim other strings
        entry.Title = entry.Title?.Trim();
        entry.PrimaryMood = entry.PrimaryMood?.Trim();
        entry.SecondaryMood1 = entry.SecondaryMood1?.Trim();
        entry.SecondaryMood2 = entry.SecondaryMood2?.Trim();
        entry.Category = entry.Category?.Trim();
        entry.Tags = entry.Tags?.Trim();

        // Set defaults if not selected
        if (string.IsNullOrWhiteSpace(entry.PrimaryMood))
            entry.PrimaryMood = "Unknown";

        if (string.IsNullOrWhiteSpace(entry.Category))
            entry.Category = "Unknown";

        var existing = await JournalService.GetEntryByDateAsync(entry.EntryDate);

        if (existing != null)
        {
            existing.Title = entry.Title;
            existing.Content = entry.Content;
            existing.PrimaryMood = entry.PrimaryMood;
            existing.SecondaryMood1 = entry.SecondaryMood1;
            existing.SecondaryMood2 = entry.SecondaryMood2;
            existing.Category = entry.Category;
            existing.Tags = entry.Tags;

            await JournalService.UpdateEntryAsync(existing);
        }
        else
        {
            entry.CreatedAt = DateTime.Now;
            entry.UpdatedAt = DateTime.Now;
            await JournalService.AddEntryAsync(entry);
        }

        Nav.NavigateTo("/entries");
    }

     


    void Cancel() => Nav.NavigateTo("/entries");
}
