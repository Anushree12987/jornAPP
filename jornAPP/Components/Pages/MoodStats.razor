@code {
private List<JournalEntry> entries = new();
private Dictionary<string, int> moodCounts = new();

private int currentStreak;
private int longestStreak;
private bool rendered;

protected override async Task OnInitializedAsync()
{
entries = await JournalService.GetAllEntriesAsync();
CalculateMoodCounts();
CalculateStreaks();
}

protected override async Task OnAfterRenderAsync(bool firstRender)
{
if (firstRender && !rendered)
{
rendered = true;

try
{
await JS.InvokeVoidAsync(
"renderMoodChart",
moodCounts.Keys.ToArray(),
moodCounts.Values.ToArray()
);

var ordered = entries.OrderBy(e => e.EntryDate).ToList();

await JS.InvokeVoidAsync(
"renderTrendChart",
ordered.Select(e => e.EntryDate.ToString("MM/dd")).ToArray(),
ordered.Select(e => MoodToNumber(e.PrimaryMood)).ToArray()
);
}
catch (Exception ex)
{
Console.WriteLine($"Chart rendering error: {ex.Message}");
}
}
}

private void CalculateMoodCounts()
{
moodCounts.Clear();

foreach (var entry in entries)
{
if (!string.IsNullOrWhiteSpace(entry.PrimaryMood))
{
moodCounts.TryAdd(entry.PrimaryMood, 0);
moodCounts[entry.PrimaryMood]++;
}
}
}

private void CalculateStreaks()
{
if (!entries.Any()) return;

var dates = entries
.Select(e => e.EntryDate.Date)
.Distinct()
.OrderBy(d => d)
.ToList();

int streak = 1;
currentStreak = 1;
longestStreak = 1;

for (int i = 1; i < dates.Count; i++)
{
if ((dates[i] - dates[i - 1]).Days == 1)
{
streak++;
currentStreak = streak;
longestStreak = Math.Max(longestStreak, streak);
}
else
{
streak = 1;
}
}
}

private int MoodToNumber(string mood) => mood switch
{
"üòä Happy" => 5,
"üòå Calm" => 4,
"üòê Okay" => 3,
"üòî Sad" => 2,
"üò§ Stressed" => 1,
_ => 3
};

