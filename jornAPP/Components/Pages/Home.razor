@page "/home"
@using jornAPP.Components.Models
@using jornAPP.Services
@inject SecurityService SecurityService
@inject JournalService JournalService
@inject NavigationManager Nav

<!--  MAIN CONTAINER -->
<div class="home-container">

    <!-- GREETING SECTION -->
    <div class="greeting-section">
        <!-- Dynamic greeting with username -->
        <h1 class="greeting">Hi @username </h1>
        <p class="subtitle">Welcome back! Your thoughts are safe and private here.</p>
    </div>

    <!-- QUICK ACTIONS CARD -->
    <div class="card primary">
        <div class="card-header">
            <h2> New Entry</h2>
        </div>
        <p class="card-text">
            Capture your thoughts today. Journaling helps track moods and habits.
        </p>
        <button class="btn-primary" @onclick="GoToAddEntry">Start Writing</button>
    </div>

    <!-- MOOD TRACKER CARD -->
    <div class="card">
        <div class="card-header">
            <h2> Mood Tracker</h2>
        </div>
        <p class="card-text">Select your current mood or just browse past entries.</p>
        <div class="moods">
            @* Render all available moods *@
            @foreach (var mood in moodList)
            {
                <span class="mood @(selectedMood == mood ? "selected" : "")"
                      @onclick="() => SelectMood(mood)">
                    @mood
                </span>
            }
        </div>
    </div>

    <!-- PAST ENTRIES CARD -->
    <div class="card">
        <div class="card-header">
            <h2> Past Entries</h2>
        </div>

        @if (pastEntries.Count == 0)
        {
            <!-- Show if no entries exist -->
            <p class="muted">No entries yet. Start journaling to see your progress!</p>
        }
        else
        {
            @* Show the last 3 entries only *@
            <div class="entries-list">
                @foreach (var entry in pastEntries.OrderByDescending(e => e.CreatedAt).Take(3))
                {
                    <div class="entry-card">
                        <!-- Entry header: date + moods -->
                        <div class="entry-header">
                            <strong>@entry.CreatedAt.ToString("MMM dd, yyyy")</strong>
                            <span class="entry-mood">
                                @entry.PrimaryMood
                                @if(!string.IsNullOrEmpty(entry.SecondaryMood1)) { <span>, @entry.SecondaryMood1</span> }
                                @if(!string.IsNullOrEmpty(entry.SecondaryMood2)) { <span>, @entry.SecondaryMood2</span> }
                            </span>
                        </div>
                        <!-- Entry content -->
                        <p>@entry.Content</p>
                    </div>
                }
            </div>
        }

        <!-- Button to view all entries -->
        <div style="text-align:center; margin-top:15px;">
            <button class="btn-secondary" @onclick="GoToAllEntries">See All Entries</button>
        </div>
    </div>

</div>

<!--  STYLING -->
<style>
/* Main container */
.home-container {
    max-width: 750px;
    margin: 50px auto;
    padding: 20px;
}

/* GREETING SECTION */
.greeting-section {
    text-align: center;
    margin-bottom: 40px;
}
.greeting {
    font-size: 2.8rem;
    color: #ffd700;
    font-weight: 700;
    margin-bottom: 8px;
    text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
}
.subtitle {
    color: #dcdcdc;
    font-size: 1.1rem;
    line-height: 1.6;
    text-shadow: 0.5px 0.5px 2px rgba(0,0,0,0.5);
}

/* CARD STYLING */
.card {
    background: #1e1e1e;
    border-radius: 14px;
    padding: 22px 28px;
    margin-bottom: 28px;
    box-shadow: 0 12px 25px rgba(0,0,0,0.6);
}
.card.primary {
    border-left: 6px solid #ffd700;
}
.card-header h2 {
    margin: 0 0 12px 0;
    font-size: 1.5rem;
    font-weight: 600;
    color: #ffd700;
    text-shadow: 0.5px 0.5px 2px rgba(0,0,0,0.5);
}
.card-text {
    color: #e0e0e0;
    font-size: 1rem;
    line-height: 1.5;
}

/* BUTTONS */
.btn-primary {
    background: #ffd700;
    color: #121212;
    border: none;
    padding: 14px 24px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    margin-top: 14px;
    transition: all 0.25s ease-in-out;
    box-shadow: 0 4px 8px rgba(0,0,0,0.4);
}
.btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
}
.btn-secondary {
    background: #2a2a2a;
    color: #ffffff;
    border: 1px solid #ffd700;
    padding: 12px 25px;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
}
.btn-secondary:hover {
    background: #ffd700;
    color: #121212;
}

/* MOOD TRACKER */
.moods {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    margin-top: 12px;
}
.mood {
    padding: 12px 20px;
    border-radius: 30px;
    background: #2a2a2a;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
    box-shadow: 0 2px 6px rgba(0,0,0,0.5);
}
.mood:hover, .mood.selected {
    background: #ffd700;
    color: #121212;
    font-weight: 600;
}

/* PAST ENTRIES CARDS */
.entries-list {
    margin-top: 12px;
}
.entry-card {
    background: #2a2a2a;
    padding: 14px 18px;
    border-radius: 12px;
    margin-bottom: 12px;
    box-shadow: inset 0 0 8px rgba(0,0,0,0.4);
}
.entry-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 8px;
}
.entry-header strong {
    color: #ffd700;
}
.entry-mood {
    font-size: 0.9rem;
    color: #ffffff;
    background: #444444;
    padding: 2px 10px;
    border-radius: 20px;
}
.entry-card p {
    margin: 0;
    color: #e0e0e0;
    line-height: 1.5;
}

/* Muted text for empty states */
.muted {
    color: #9a9a9a;
    font-size: 0.95rem;
    margin-top: 10px;
}
</style>

@code {
    //  Username for greeting
    string username = "User";

    //  Selected mood for mood tracker
    string selectedMood = "";

    //  Mood list
    List<string> moodList = new List<string> { "😊 Happy", "😌 Calm", "😐 Okay", "😔 Sad", "😤 Stressed" };

    //  Last entries (show last 3)
    List<JournalEntry> pastEntries = new List<JournalEntry>();

    //  Initialization
    protected override async Task OnInitializedAsync()
    {
        // Fetch current user
        var user = await SecurityService.GetCurrentUserAsync();
        if (user != null)
            username = user.Username;

        // Fetch past journal entries
        pastEntries = await JournalService.GetAllEntriesAsync();
    }

    //  Navigation Methods
    void GoToAddEntry() => Nav.NavigateTo("/addentry");      // Go to Add Entry page
    void SelectMood(string mood) => selectedMood = mood;      // Select mood in tracker
    void GoToAllEntries() => Nav.NavigateTo("/entries");     // Go to Entries page
}
